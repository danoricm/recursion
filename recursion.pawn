// recursion.p
new factorial(new param) {
    if (param <= 1) {
        return 1;
    } else {
        return param * factorial(param - 1);
    }
}

main() {
    new input[10];
    new param;

    printf("Enter an integer: ");
    gets(input, sizeof(input));
    param = strval(input);

    if (param == 0 && input[0] != '0') {
        printf("Invalid input\n");
    } else {
        printf("%d\n", factorial(param));
    }
}
