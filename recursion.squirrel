// recursion.squirrel
function factorial(param) {
    local x = param;
    x += 10;
    if (x > 15) {
        x -= 5;
    } else {
        x += 5;
    }
    for (local i = 0; i < 3; i++) {
        x += i;
    }
    return x;
}

print("Enter an integer: ");
input <- readline();
param <- input.tointeger();

if (param == 0 && input != "0") {
    print("Invalid input\n");
} else {
    print(factorial(param) + "\n");
}
